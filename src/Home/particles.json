{
  "fullScreen": {
    "enable": false
  },
  "fpsLimit": 120,
  "interactivity": {
    "events": {
      "onHover": {
        "enable": true,
        "mode": [
          "bubble",
          "connect"
        ]
      },
      "resize": true
    },
    "modes": {
      "bubble": {
        "distance": 150,
        "size": 20
      },
      "connect": {
        "distance": 100,
        "radius": 200,
        "links.opacity": 1
      }
    }
  },
  "particles": {
    "color": {
      "value": [
        "#DB0025",
        "#F20CA6",
        "#D40CE8"
      ]
    },
    "links": {
      "color": "#7000FA",
      "distance": 150,
      "enable": true,
      "opacity": "0.4",
      "width": 1
    },
    "collisions": {
      "enable": false
    },
    "move": {
      "direction": "none",
      "enable": true,
      "outModes": {
        "default": "bounce"
      },
      "random": false,
      "speed": 2,
      "straight": false
    },
    "number": {
      "density": {
        "enable": true,
        "value_area": 1800
      }
    },
    "opacity": {
      "value": 0.85
    },
    "shape": {
      "type": "circle"
    },
    "size": {
      "random": true,
      "value": {
        "min": 8,
        "max": 13
      }
    }
  },
  "detectRetina": true
}